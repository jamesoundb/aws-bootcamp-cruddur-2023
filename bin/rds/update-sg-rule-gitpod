#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="RDS Update SG Rule Gitpod"
printf "${CYAN}>> ${LABEL}${NO_COLOR}\n"

# export GITPOD_IP=$(curl ifconfig.me)

echo "Gitpod IP:"
echo $LOCAL_IP
echo "Date:"
echo $DATE

aws ec2 modify-security-group-rules \
    --group-id $DB_SG_ID \
    --security-group-rules "SecurityGroupRuleId=$DB_SG_RULE_ID,SecurityGroupRule={Description=Gitpod $DATE,IpProtocol=tcp,FromPort=5432,ToPort=5432,CidrIpv4=$LOCAL_IP/32}"