#! /usr/bin/bash

ABS_PATH=$(readlink -f "$0")
BACKEND_PATH=$(dirname $ABS_PATH)
BIN_PATH=$(dirname $BACKEND_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)
BACKEND_FLASK_PATH=$(dirname $PROJECT_PATH)
DOCKER_FILE_PATH="$BACKEND_FLASK_PATH/backend-flask"

docker build \
-f "$DOCKER_FILE_PATH/Dockerfile.prod" \
-t backend-flask-prod \
"$DOCKER_FILE_PATH/."